export LANG=C LC_ALL=C
set -ux
DATA="${DATA:-data}"
BIN="${0%/*}"

function find-data() {
	find "$DATA" -maxdepth 1 -type f -name '*.tsv'
}

function is-any-of() {
	[ -n "$1" ] || return 1
	local tested="$1"
	shift
	for i in "$@" ; do
		[ "$tested" = "$i" ] && return 0 # success
	done
	return 1 # failure
}
